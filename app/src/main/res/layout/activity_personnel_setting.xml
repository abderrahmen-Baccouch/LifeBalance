<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".personnelSetting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="Orientation">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="370dp"
            android:layout_height="270dp"
            app:cardElevation="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="28dp"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.069"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/mesure" />

            <TextView
                android:layout_width="197dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/chewyy"
                android:paddingLeft="5dp"
                android:text=" Poids"
                android:textColor="#F8025C"
                android:textSize="35dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/moins"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="80dp"
                android:src="@drawable/_79396" />

            <ImageView
                android:id="@+id/plus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="235dp"
                android:layout_marginTop="80dp"
                android:src="@drawable/aa179402" />

            <TextView
                android:id="@+id/poids"
                android:layout_width="125dp"
                android:layout_height="55dp"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/chewyy"
                android:inputType="numberDecimal"
                android:paddingRight="10dp"
                android:text="74,0"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="40dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="130dp"
                android:fontFamily="@font/patrick_hand"
                android:paddingRight="10dp"
                android:text="Kg"
                android:textAlignment="center"
                android:textColor="#676565"
                android:textSize="20dp"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/modifier"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="175dp"
                android:background="@drawable/activate_btn2"
                android:fontFamily="@font/chewyy"
                android:text="Modifier"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="420dp"
            android:layout_height="50dp"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="-390dp"
            android:background="@drawable/background_color_3"
            app:layout_constraintEnd_toEndOf="@+id/cardView3"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="@+id/cardView3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.449"
            tools:ignore="MissingConstraints"
            android:orientation="horizontal">

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="352dp"
            android:layout_height="105dp"
            android:layout_marginLeft="-392dp"
            android:layout_marginTop="320dp"
            tools:ignore="MissingConstraints">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="120dp"
                android:src="@drawable/calque_22"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/candal"
                android:text="IMC"
                android:textAlignment="center"
                android:textColor="#434141"
                android:textSize="20dp"
                tools:ignore="MissingConstraints" />
            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/candal"
                android:text="Poids"
                android:textAlignment="center"
                android:textColor="#434141"
                android:textSize="20dp"
                tools:ignore="MissingConstraints" />



            <TextView
                android:id="@+id/imc2"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/carter_one"
                android:text="10"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24dp"
                tools:ignore="MissingConstraints" />



            <TextView
                android:id="@+id/poids2"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/chewyy"
                android:text="10"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="32dp"
                tools:ignore="MissingConstraints" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>