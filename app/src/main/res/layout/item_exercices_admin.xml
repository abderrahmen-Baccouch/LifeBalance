<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:ignore="Orientation">

    <androidx.cardview.widget.CardView
        android:id="@+id/exerciceID"
        android:layout_width="380dp"
        android:layout_height="70dp"
        app:cardElevation="7dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        android:layout_marginRight="10dp">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_marginTop="-10dp"
            android:background="@drawable/bicycling"/>
        <TextView
            android:id="@+id/nomExercice"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:text="Exercice"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:textColor="#055EAC"
            android:fontFamily="@font/galada"
            android:textStyle="bold"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/calories"
            android:layout_width="116dp"
            android:layout_height="40dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/patrick_hand"
            android:text="Nbrs kcal"
            android:textColor="#5C5454"
            android:textSize="22dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="30 Mins"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="43dp"
            android:textColor="#113A55"
            android:textStyle="bold"
            android:fontFamily="@font/coda"
            android:textSize="16dp"/>
        <ImageView
            android:id="@+id/mMenus"
            android:layout_width="35sp"
            android:layout_height="35dp"
            android:layout_marginLeft="335dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_more"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>