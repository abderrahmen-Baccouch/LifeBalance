<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AjouterRepasAdmin">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="370dp"
        android:layout_height="300dp"
        app:cardCornerRadius="35dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-10dp"
            android:src="@drawable/_38436476_dessin_lin_aire_continu_de_l_assiette_et_de_l_inscription_bon_app_tit_contours_couteau_et_fourchette" />

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp">

            <EditText
                android:id="@+id/nomRepas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:fontFamily="sans-serif-medium"
                android:hint="Nom du Repas"
                android:textAlignment="center"
                android:textColorHint="#656161"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="100dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp">

            <EditText
                android:id="@+id/tempsPreparation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:fontFamily="sans-serif-medium"
                android:hint="Temps de prÃ©paration"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textColorHint="#656161"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardElevation="15dp"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="#08FF00"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="170dp">
            <Button
                android:id="@+id/camera"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/ic_baseline_photo_camera_24"
                android:src="@drawable/calque_6_cam"/>
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/addIngredient"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/bouton_bg5"
        android:fontFamily="@font/salsa"
        android:text="Ajouter un ingredient"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.834" />


    <Button
        android:id="@+id/saveRecette"
        android:layout_width="93dp"
        android:layout_height="57dp"
        android:background="@drawable/activate_btn"
        android:fontFamily="@font/coiny"
        android:text="AJOUTER"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.953"
        tools:ignore="DuplicateIds,MissingConstraints" />

    <ImageView
        android:id="@+id/cancelRecette"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewR"
        android:layout_width="207dp"
        android:layout_height="142dp"
        android:src="@drawable/placeholder"
        app:civ_border_color="#00FF00"
        app:civ_border_width="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03" />



</androidx.constraintlayout.widget.ConstraintLayout>
