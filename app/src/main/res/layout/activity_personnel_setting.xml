<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".personnelSetting">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="370dp"
        android:layout_height="270dp"
        app:cardElevation="50dp"
        android:layout_marginTop="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.069"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/mesure" />

        <TextView
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/chewyy"
            android:paddingLeft="5dp"
            android:text=" Poids"
            android:textColor="#F8025C"
            android:textSize="35dp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/moins"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/_79396" />

        <ImageView
            android:id="@+id/plus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/aa179402" />

        <TextView
            android:id="@+id/poids"
            android:layout_width="125dp"
            android:layout_height="55dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/chewyy"
            android:inputType="numberDecimal"
            android:paddingRight="10dp"
            android:text="74,0"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="40dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="130dp"
            android:fontFamily="@font/patrick_hand"
            android:paddingRight="10dp"
            android:text="Kg"
            android:textAlignment="center"
            android:textColor="#676565"
            android:textSize="20dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/activer"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="175dp"
            android:background="@drawable/activate_btn2"
            android:fontFamily="@font/chewyy"
            android:text="Modifier"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/background_color_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cardView3"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="@+id/cardView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.449"
        tools:ignore="MissingConstraints">

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="352dp"
        android:layout_height="105dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.548"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/candal"
            android:text="IMC"
            android:textAlignment="center"
            android:textColor="#434141"
            android:textSize="20dp"
            tools:ignore="MissingConstraints" />
        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/candal"
            android:text="Poids"
            android:textAlignment="center"
            android:textColor="#434141"
            android:textSize="20dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="43dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/salsa"
            android:text="Grasse Cororelle"
            android:textColor="#434141"
            android:textSize="20dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/imc2"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/carter_one"
            android:text="10"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/img"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/carter_one"
            android:text="24%"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/poids2"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/chewyy"
            android:text="10"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="32dp"
            tools:ignore="MissingConstraints" />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>