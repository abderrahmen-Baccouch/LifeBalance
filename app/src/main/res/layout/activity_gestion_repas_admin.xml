<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DietPlans0">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/dinner"
                android:layout_width="370dp"
                android:layout_height="200dp"
                app:cardElevation="10dp"
                android:layout_marginTop="470dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.609"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.748">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="329dp"
                    android:layout_marginTop="-120dp"
                    android:src="@drawable/dd_flou" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/patrick_hand"
                    android:text="Dinner"
                    android:textAlignment="center"
                    android:textColor="#ECEBEB"
                    android:textSize="60dp"
                    android:textStyle="bold" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="200dp"
                    android:background="#CDCACA" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/petit_dejeuner"
                android:layout_width="370dp"
                android:layout_height="200dp"
                app:cardElevation="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="-370dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.487"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.039">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="329dp"
                    android:src="@drawable/b4_flou"
                    android:layout_marginTop="-120dp"/>

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/patrick_hand"
                    android:text="PetitDéjeuner"
                    android:textAlignment="center"
                    android:textColor="#ECEBEB"
                    android:textSize="60dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="200dp"
                    android:background="#CDCACA" />



            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/dejeuner"
                android:layout_width="370dp"
                android:layout_height="200dp"
                app:cardElevation="10dp"
                android:layout_marginTop="250dp"
                android:layout_marginLeft="-370dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.487"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.039">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="329dp"
                    android:src="@drawable/ll_flou"
                    android:layout_marginTop="-120dp"/>
                <TextView
                    android:layout_width="220dp"
                    android:layout_height="70dp"
                    android:textColor="#ECEBEB"
                    android:textStyle="bold"
                    android:fontFamily="@font/patrick_hand"
                    android:textSize="60dp"
                    android:text="Déjeuner"
                    android:textAlignment="center"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="50dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="200dp"
                    android:background="#CDCACA" />


            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>