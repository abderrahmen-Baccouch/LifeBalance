<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="Orientation">

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="110dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        tools:ignore="MissingClass">
        <ImageView
            android:id="@+id/imageAliment"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:src="@drawable/burger"/>

        <TextView
            android:id="@+id/nomAliment"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_margin="6dp"
            android:fontFamily="@font/montserrat_alternates_medium"
            android:paddingLeft="60sp"
            android:paddingTop="7dp"
            android:text="food  omlette "
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/mMenus"
            android:layout_width="35sp"
            android:layout_height="35dp"
            android:layout_marginLeft="315dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/ic_more"/>

        <TextView
            android:id="@+id/calories"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="300dp"
            android:fontFamily="@font/lobsterr"
            android:layout_marginTop="38dp"
            android:paddingTop="7sp"
            android:paddingLeft="5dp"
            android:text="300kcal"
            android:textColor="#595656"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/quantite"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_marginLeft="300dp"
            android:fontFamily="@font/lobsterr"
            android:layout_marginTop="70dp"
            android:paddingTop="10sp"
            android:paddingLeft="5dp"
            android:text="300g"
            android:textColor="#595656"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!--<ImageView
            android:id="@+id/arrowDown"
            android:layout_width="50dp"
            android:layout_height="30dp"
           android:src="@drawable/ic_arrow_down"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="30dp"/> -->
        <TextView
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:text="Proteine"
            android:paddingLeft="15dp"
            android:background="@color/white"
            android:layout_marginLeft="10dp"
            android:textColor="#323030"
            android:textSize="18dp"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_alternates_medium"/>

        <TextView
            android:id="@+id/proteines"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            android:layout_marginTop="75dp"
            android:background="@color/white"
            android:fontFamily="@font/montserrat_alternates_medium"
            android:paddingLeft="12dp"
            android:paddingTop="0dp"
            android:text="125g"
            android:textColor="#888A8A"
            android:textSize="18dp" />
        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="115dp"
            android:paddingLeft="15dp"
            android:layout_marginTop="50dp"
            android:paddingTop="0dp"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:text="Glucides"
            android:background="@color/white"
            android:textColor="#323030"
            android:textSize="18dp"
            android:fontFamily="@font/montserrat_alternates_medium"/>
        <TextView
            android:id="@+id/glucides"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="687g"
            android:textStyle="bold"
            android:paddingTop="0dp"
            android:layout_marginLeft="125dp"
            android:paddingLeft="15dp"
            android:background="@color/white"
            android:textColor="#888A8A"
            android:textSize="18dp"
            android:layout_marginTop="75dp"
            android:fontFamily="@font/montserrat_alternates_medium"/>
        <TextView
            android:textStyle="bold"
            android:paddingTop="0dp"
            android:layout_marginLeft="220dp"
            android:paddingLeft="15dp"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:text="Lipides"
            android:background="@color/white"
            android:textColor="#323030"
            android:textSize="18dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/montserrat_alternates_medium"/>
        <TextView
            android:id="@+id/lipides"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="50g"
            android:textStyle="bold"
            android:paddingTop="0dp"
            android:layout_marginLeft="229dp"
            android:paddingLeft="15dp"
            android:background="@color/white"
            android:textColor="#888A8A"
            android:textSize="18dp"
            android:layout_marginTop="75dp"
            android:fontFamily="@font/montserrat_alternates_medium"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>