<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="Orientation">

    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="100dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        tools:ignore="MissingClass">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:src="@drawable/burger"/>

        <TextView
            android:id="@+id/mTitle"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_margin="6dp"
            android:fontFamily="@font/montserrat_subrayada"
            android:paddingLeft="60sp"
            android:paddingTop="7dp"
            android:text="food  bnina "
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mSubtitle"
            android:layout_width="70dp"
            android:layout_height="48dp"
            android:layout_marginLeft="290dp"
            android:fontFamily="@font/lobsterr"
            android:paddingTop="15sp"
            android:paddingLeft="5dp"
            android:text="3kcal"
            android:textColor="#595656"
            android:textSize="15sp"
            android:textStyle="bold" />
      <ImageView
            android:id="@+id/mMenus"
            android:layout_width="35sp"
            android:layout_height="35dp"
            android:layout_marginLeft="315dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/ic_more"/>
        <!--<ImageView
            android:id="@+id/arrowDown"
            android:layout_width="50dp"
            android:layout_height="30dp"
           android:src="@drawable/ic_arrow_down"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="30dp"/> -->
        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="Proteine"
            android:paddingLeft="15dp"
            android:background="@color/white"
            android:layout_marginLeft="10dp"
            android:textColor="#323030"
            android:textSize="18dp"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:fontFamily="@font/chewyy"/>

        <TextView
            android:id="@+id/mProteines"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="68dp"
            android:background="@color/white"
            android:fontFamily="@font/anton"
            android:paddingLeft="12dp"
            android:paddingTop="0dp"
            android:text="125g"
            android:textColor="#888A8A"
            android:textSize="18dp" />
        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="115dp"
            android:paddingLeft="15dp"
            android:layout_marginTop="50dp"
            android:paddingTop="0dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="Glucides"
            android:background="@color/white"
            android:textColor="#323030"
            android:textSize="18dp"
            android:fontFamily="@font/chewyy"/>
        <TextView
            android:id="@+id/mGlucides"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="687g"
            android:paddingTop="0dp"
            android:layout_marginLeft="125dp"
            android:paddingLeft="15dp"
            android:background="@color/white"
            android:textColor="#888A8A"
            android:textSize="18dp"
            android:layout_marginTop="68dp"
            android:fontFamily="@font/anton"/>
        <TextView
            android:textStyle="bold"
            android:paddingTop="0dp"
            android:layout_marginLeft="220dp"
            android:paddingLeft="15dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="Lipides"
            android:background="@color/white"
            android:textColor="#323030"
            android:textSize="18dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/chewyy"/>
        <TextView
            android:id="@+id/mLipides"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="50g"
            android:paddingTop="0dp"
            android:layout_marginLeft="229dp"
            android:paddingLeft="15dp"
            android:background="@color/white"
            android:textColor="#888A8A"
            android:textSize="18dp"
            android:layout_marginTop="68dp"
            android:fontFamily="@font/anton"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>