<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityExercices">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="417dp"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:src="@drawable/rectangle_3__8_"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:id="@+id/myCustomActivity"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:background="@drawable/gym"
            android:layout_marginLeft="-90dp"
            android:layout_marginTop="-20dp"
            />
        <ImageView
            android:layout_width="800dp"
            android:layout_height="24dp"
            android:layout_marginLeft="-440dp"
            android:layout_marginTop="160dp"
            android:background="@drawable/rectangle_4"/>


        <ImageView
            android:id="@+id/retour"
            android:layout_width="30dp"
            android:layout_height="41dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="-760dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.016"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.024"
            app:srcCompat="@drawable/diary_flech" />

        <ImageView
            android:layout_width="417dp"
            android:layout_height="20dp"
            android:background="@drawable/rectangle_3__5_"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="-40dp"/>
        <ImageView
            android:layout_width="417dp"
            android:layout_height="20dp"
            android:background="@drawable/rectangle_3__5_"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="-420dp"/>
     <androidx.cardview.widget.CardView
         android:layout_marginTop="50dp"
         android:layout_marginLeft="-395dp"
         android:id="@+id/cardView"
         android:layout_width="360dp"
         android:layout_height="200dp"
         android:paddingTop="100dp"
         app:cardBackgroundColor="@color/white"
         app:cardCornerRadius="30dp"
         app:cardElevation="20dp"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         tools:ignore="MissingConstraints">

         <ImageView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:scaleType="centerCrop"
             android:background="@drawable/femme_forme_coup_complet_travaillant_23_2149137063"/>

         <ImageView
             android:layout_width="220dp"
             android:layout_height="50dp"
             android:layout_marginLeft="75dp"
             android:layout_marginTop="110dp"
             android:src="@drawable/calque_fitness"/>

     </androidx.cardview.widget.CardView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="-378dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/exercicesRecycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30sp"/>
        </LinearLayout>
