<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".AjouterRepasAdmin">

<androidx.cardview.widget.CardView
    android:layout_width="370dp"
    android:layout_height="320dp"
    app:cardElevation="20dp"
    app:cardCornerRadius="35dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:ignore="MissingConstraints">

    <ImageView
        android:layout_width="515dp"
        android:layout_height="366dp"
        android:layout_marginTop="-15dp"
        android:layout_marginLeft="-10dp"
        android:src="@drawable/aliment" />
    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:cardElevation="25dp"
        app:cardCornerRadius="20dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="30dp">
        <EditText
            android:id="@+id/nomAliment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="Nom D'aliment"
            android:textColorHint="#656161"
            android:textAlignment="center"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:cardElevation="25dp"
        app:cardCornerRadius="20dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="100dp">
        <EditText
            android:id="@+id/calories"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="Calories"
            android:inputType="number"
            android:textAlignment="center"
            android:textColorHint="#656161"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:cardElevation="25dp"
        app:cardCornerRadius="20dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="100dp">
        <EditText
            android:id="@+id/quantite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="Quntite"
            android:inputType="number"
            android:textAlignment="center"
            android:textColorHint="#656161"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:cardElevation="25dp"
        app:cardCornerRadius="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="175dp">
        <EditText
            android:id="@+id/proteines"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="Proteine"
            android:textAlignment="center"
            android:textColorHint="#656161"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:cardElevation="25dp"
        app:cardCornerRadius="20dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="175dp">
        <EditText
            android:id="@+id/lipides"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="Lipide"
            android:textAlignment="center"
            android:textColorHint="#656161"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:cardElevation="25dp"
        app:cardCornerRadius="20dp"
        android:layout_marginLeft="255dp"
        android:layout_marginTop="175dp">
        <EditText
            android:id="@+id/glucides"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="Glucide"
            android:textAlignment="center"
            android:textColorHint="#656161"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"/>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardElevation="15dp"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="#FF005D"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="245dp">
        <Button
            android:id="@+id/camera"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/ic_baseline_photo_camera_24"
            android:src="@drawable/calque_6_cam"/>
    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginLeft="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.887"
        tools:ignore="MissingConstraints">

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="100dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <Button
                android:id="@+id/save_aliment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF005D"
                android:fontFamily="@font/patrick_hand"
                android:text="ENREGISTRER"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewG"
        android:layout_width="207dp"
        android:layout_height="142dp"
        android:src="@drawable/placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03"
        app:civ_border_width="3dp"
        app:civ_border_color="#FF005D"/>

</androidx.constraintlayout.widget.ConstraintLayout>
