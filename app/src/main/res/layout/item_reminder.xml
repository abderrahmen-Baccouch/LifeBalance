<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="155dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="170dp"
            android:background="#C8C2C2"
            android:layout_marginLeft="70dp"/>

        <TextView
            android:id="@+id/nomTask"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Participer au dÃ©fit"
            android:fontFamily="@font/montserrat_alternates_medium"
            android:textSize="20sp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/descTask"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="pompe"
            android:textColor="#858282"
            android:textSize="19dp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_alternates_medium"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="53dp"/>

        <TextView
            android:id="@+id/dateTask"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:text="17/05/2000"
            android:textStyle="bold"
            android:textColor="#858282"
            android:textSize="18dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="90dp"
            android:fontFamily="@font/montserrat_alternates_medium"/>

        <TextView
            android:id="@+id/timeTask"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:text="21:54"
            android:textStyle="bold"
            android:textColor="#858282"
            android:textSize="18dp"
            android:layout_marginLeft="87dp"
            android:layout_marginTop="122dp"
            android:fontFamily="@font/montserrat_alternates_medium"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:src="@drawable/sonnerie2"
            android:paddingLeft="0dp"/>





        <ImageView
            android:id="@+id/deleteTask"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="350dp"
            android:src="@drawable/x"/>






    </androidx.cardview.widget.CardView>
</LinearLayout>